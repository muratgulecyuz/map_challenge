<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.applogist.mapchallenge.ui.map.MapFragment"
        android:label="Map Fragment">
        <action
            android:id="@+id/action_mapFragment_to_tripsFragment"
            app:destination="@id/tripsFragment" />
    </fragment>

    <fragment
        android:id="@+id/tripsFragment"
        android:name="com.applogist.mapchallenge.ui.trips.TripsFragment"
        android:label="Trips Fragment">
        <argument
            android:name="trips"
            app:argType="com.applogist.mapchallenge.ui.map.Trips" />
    </fragment>

</navigation>